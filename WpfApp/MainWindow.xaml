<Window x:Class="ChmodConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chmod Converter" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Numeric Input -->
        <Label Grid.Row="0" Content="Numeric Notation (e.g., 755):"/>
        <TextBox Grid.Row="1" Text="{Binding NumericInput, UpdateSourceTrigger=PropertyChanged}" 
                 Width="100" HorizontalAlignment="Left">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsNumericValid}" Value="False">
                            <Setter Property="Background" Value="LightPink"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <!-- Symbolic Checkboxes -->
        <Label Grid.Row="2" Content="Symbolic Notation:" Margin="0,10,0,0"/>
        <Grid Grid.Row="3" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Content="User"/>
            <Label Grid.Row="0" Grid.Column="2" Content="Group"/>
            <Label Grid.Row="0" Grid.Column="3" Content="Others"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Read"/>
            <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding UserRead, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="1" Grid.Column="2" IsChecked="{Binding GroupRead, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="1" Grid.Column="3" IsChecked="{Binding OthersRead, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Write"/>
            <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding UserWrite, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding GroupWrite, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="2" Grid.Column="3" IsChecked="{Binding OthersWrite, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Execute"/>
            <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding UserExecute, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="3" Grid.Column="2" IsChecked="{Binding GroupExecute, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Grid.Row="3" Grid.Column="3" IsChecked="{Binding OthersExecute, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!-- Symbolic Output -->
        <Label Grid.Row="4" Content="Symbolic Notation Output:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="5" Text="{Binding SymbolicOutput, Mode=OneWay}" Width="100" HorizontalAlignment="Left" IsReadOnly="True"/>
    </Grid>
</Window>